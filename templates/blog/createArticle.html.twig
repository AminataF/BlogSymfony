{% extends 'base.html.twig' %}

{% block title %}Création d'un article{% endblock %}

{% block body %}
    {% if editMode %}
        <h1>Modification d'un article</h1>
    {% else %}
        <h1>Création d'un article</h1>
    {% endif %}
    {{ form_start(formArticle) }}
        {{form_row(formArticle.title, {'attr' : {'placeholder' : 'Votre titre'}})}}
        {{form_row(formArticle.category)}}
        {{form_row(formArticle.content, {'attr' : {'placeholder' : "contenu de l'article"}})}}
        {{form_row(formArticle.image, {'attr' : {'placeholder' : "image de l'article"}})}}
        {% if editMode %}
            <button type="submit" class="btn btn-success">Enregistrer les modification</button>
        {% else %}
            <button type="submit" class="btn btn-success">Ajouter l'article</button>
        {% endif %}
    {{ form_end(formArticle) }}
{% endblock %}
