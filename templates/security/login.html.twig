{% extends 'base.html.twig' %}

{% block title %}Bienvenue sur notre page d'inscription !{% endblock %}

{% block body %}
    <h1>LOGIN</h1>
    <form action="{{ path('security_login')}}" method="post">
        <div class="form-group">
            <input name="_username" placeholder="Adresse e-mail" required type="text" class="form-control">
        </div>
        <div class="form-group">
            <input name="_password"placeholder="Mot de passe" required type="password" class="form-control">
        </div>
        <div class="form-group">
            <button class="btn btn-success" type="submit">Connexion</button>
        </div>
    </form>
{% endblock %}
